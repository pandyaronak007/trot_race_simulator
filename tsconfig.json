{
    "compilerOptions": {
        "incremental": true,
        "resolveJsonModule": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": "./src",
        "module": "commonjs",
        "allowJs": true,
        "removeComments": false,
        "watch": false,
        "sourceMap": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "*.json",
        "*.js"
    ],
    "exclude": [
        "package-lock.json"
    ]
}